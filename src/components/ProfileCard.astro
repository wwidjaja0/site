---
import { Image } from "astro:assets";
import ProfileImage from "../assets/imgs/me.jpg";

interface Props {
	name?: string;
	dob?: Date;
	tag?: string;
}

const { name, dob, tag } = Astro.props;
const age = dob ? new Date().getFullYear() - dob.getFullYear() : "??";
---

<style>
	div {
		display: flex;
		justify-content: space-around;
		align-items: center;
		box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
		border-radius: 1rem;
		background: rgba(255, 255, 255, 0.1);
		padding: 1rem;
		margin-inline: 1rem;
		animation-name: profileCard;
		animation-duration: 0.5s;
		animation-iteration-count: 1;
	}

	img {
		border-radius: 50%;
	}

	@media screen and (max-width: 768px) {
		div {
			flex-direction: column;
			align-items: center;
			margin: 1rem;
		}
	}
</style>

<div>
	<Image src={ProfileImage} alt="An image of Widjaja" width={150} />
	<section>
		<h3>{name}</h3>
		<p>{age} years old</p>
		<p>{tag}</p>
	</section>
</div>
