---
// Import the main.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../assets/css/main.css';
import Font from '../assets/fonts/DMSans-Regular.ttf';
import Favicon from '/favicon.ico';
import AppleTouchIcon from '../assets/icons/apple-touch-icon.png';
import Favicon32 from '../assets/icons/favicon-32x32.png';
import Favicon16 from '../assets/icons/favicon-16x16.png';
import type { ImageMetadata } from 'astro';
import OpenGraphImage from '../assets/imgs/opengraph.png';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title = SITE_TITLE, description = SITE_DESCRIPTION, image = OpenGraphImage } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href={Font} as="font" type="font/ttf" crossorigin="anonymous" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image.src} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={image.src} />

<!-- Icons -->
<link rel="apple-touch-icon" sizes="180x180" href={AppleTouchIcon.src} />
<link rel="icon" type="image/png" sizes="32x32" href={Favicon32.src} />
<link rel="icon" type="image/png" sizes="16x16" href={Favicon16.src} />
<link rel="icon" type="image/x-icon" href={Favicon} />

<link rel="manifest" href="/site.webmanifest" />