---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import OpenGraphImage from "../assets/imgs/opengraph.png";

export interface Props {
  title: string;
  description?: string;
  image?: ImageMetadata;
  footerMsg?: string;
}

const {
  title = "William Widjaja",
  description = "Student, engineer, leader. Known for being 'Widjaja'.",
  image = OpenGraphImage,
  footerMsg = "welcome!",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <style>
      /* to avoid "Default styles for h1 elements are changing" */
      h1 {
        font-size: 2.5rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div>
        <slot />
      </div>
      <Footer message={footerMsg} />
    </main>
  </body>
</html>
